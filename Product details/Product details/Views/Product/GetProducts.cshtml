@model List<Product_details.EntityModels.Product>
@using Product_details.EntityModels
<h2>Products</h2>
<form class="form-inline" action=@Url.Action("GetProducts", "Product")>
    @Html.Label("Search : ", new { @class = "MR-1" })
    @Html.TextBox("Search", ViewBag.search as string, new { @class= "form-control mr-1", @placeholder="Search"})
